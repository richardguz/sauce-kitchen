<% provide(:title, "Create Playlist") %>
<h1>Create Playlist</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<%= render partial:'layouts/submission_errors', locals: {item: @playlist }%>
		<%= form_for(@playlist, url: playlists_url) do |f| %>
			<%= f.label :title %>
			<%= f.text_field :title, class: "form-control" %>

			<%= f.submit "Create!", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>