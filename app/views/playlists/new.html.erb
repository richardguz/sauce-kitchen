<% provide(:title, "Create Playlist") %>
<h1 class="center">Create Playlist</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<%= render partial:'layouts/submission_errors', locals: {item: @playlist }%>
		<%= form_for(@playlist, url: playlists_url) do |f| %>
			<%= f.label :title %>
			<%= f.text_field :title, class: "form-control" %>
			<%= f.label :private, class: 'checkbox inline' do %>
      		<%= f.check_box :private %>
      			<span>Make this playlist private</span>
     		 <% end %>
			<%= f.hidden_field :latitude, id: "latitude" %>
			<%= f.hidden_field :longitude, id: "longitude" %>

			<%= f.submit "Create!", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>

<div id="map-container" style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<%= render 'layouts/enter_location' %>

<script type="text/javascript">
  initializeMap();
</script>