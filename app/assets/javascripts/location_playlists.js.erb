  {
    if (playlists[i]["private"] || !playlists[i]["playing"]){
      continue;
    }
    var pos = {
      lat: parseFloat(playlists[i]["lat"]),
      lng: parseFloat(playlists[i]["lng"])
    };
    var marker = new google.maps.Marker({
        position: pos,
        map: map,
        title: playlists[i].title
    });
    
    playlistMarkers.push(marker);

